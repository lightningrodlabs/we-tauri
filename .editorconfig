root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Rust
[*.rs]
indent_size = 4

# Configs
[*.{json,yml,ini}]
indent_style = space
indent_size = 2

# Markdown
[*.{md,markdown}]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4
