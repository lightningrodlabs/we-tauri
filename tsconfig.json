{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "incremental": true,
  }
}
