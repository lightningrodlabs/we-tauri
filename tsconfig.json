{
  "compilerOptions": {
    "composite": false,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2021", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declarationMap": true,
  },
  "exclude": [
    "**/.pnpm",
    "**/dist",
    "**/.cargo",
    "**/node_modules",
    "**/*.stories.ts",
    "**/__tests__"
  ],
}
