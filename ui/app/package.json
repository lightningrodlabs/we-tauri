{
  "name": "nh-launcher",
  "version": "0.0.1",
  "scripts": {
    "start": "vite dev --clearScreen false --port $UI_PORT",
    "dev": "vite dev --clearScreen false --port $UI_PORT",
    "dev2": "concurrently \"npm run dev\" \"VITE_AGENT=2 vite dev --clearScreen false --port $UI_PORT_2\"",
    "build": "npm run clean; tsc; vite build && npm run zip",
    "build:watch": "npm run clean; vite build -w",
    "zip": "cd ./dist && bestzip ../ui.zip *",
    "clean": "rimraf ui.zip dist",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest --reporter=verbose"
  },
  "dependencies": {
    "@adaburrows/table-web-component": "github:adaburrows/table-web-component",
    "@holochain-open-dev/core-types": "^0.7.0",
    "@holochain-open-dev/elements": "^0.8.4",
    "@holochain-open-dev/peer-status": "^0.9.1",
    "@holochain-open-dev/profiles": "^0.17.3",
    "@holochain-open-dev/stores": "^0.8.3",
    "@holochain-open-dev/utils": "^0.16.3",
    "@holochain/client": "^0.16.7",
    "@lit-labs/context": "^0.1.3",
    "@lit-labs/scoped-registry-mixin": "^1.0.3",
    "@lit-labs/task": "^1.1.3",
    "@msgpack/msgpack": "^2.8.0",
    "@neighbourhoods/client": "workspace:*",
    "@neighbourhoods/design-system-components": "0.0.17",
    "@neighbourhoods/design-system-styles": "^0.0.7",
    "@neighbourhoods/membrane-invitations": "workspace:*",
    "@scoped-elements/material-web": "^0.0.19",
    "@scoped-elements/shoelace": "^0.0.8",
    "@types/uuid": "^9.0.7",
    "@webcomponents/scoped-custom-element-registry": "^0.0.9",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "fflate": "^0.7.4",
    "lit": "^2.8.0",
    "lit-svelte-stores": "^0.3.2",
    "lodash-es": "^4.17.21",
    "svelte": "^3.59.2",
    "uuid": "^8.3.2",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.6",
    "@esm-bundle/chai": "4.3.4-fix.0",
    "@open-wc/semantic-dom-diff": "^0.19.9",
    "@open-wc/testing": "^3.2.2",
    "@types/lodash-es": "^4.17.12",
    "bestzip": "^2.2.1",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.3.1",
    "jsdom": "^22.1.0",
    "rimraf": "^3.0.2",
    "run-singleton-cli": "^0.0.7",
    "tslib": "^2.6.2",
    "typescript": "4.5.5",
    "vite": "^4.5.1",
    "vite-plugin-checker": "^0.5.6",
    "vite-plugin-fonts": "^0.7.0",
    "vite-plugin-static-copy": "^0.15.0",
    "vitest": "^0.31.4"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "all"
  }
}
